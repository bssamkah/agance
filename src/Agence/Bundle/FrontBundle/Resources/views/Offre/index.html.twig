{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Offre list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieu</th>
                <th>Prix</th>
                <th>Type</th>
                <th>Description</th>
                <th>Typeterrain</th>
                <th>Nbrchambre</th>
                <th>Etage</th>
                <th>Note</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.lieu }}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.typeTerrain }}</td>
                <td>{{ entity.nbrChambre }}</td>
                <td>{{ entity.etage }}</td>
                <td>{{ entity.note }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offre_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('offre_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('offre_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
